# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mktr_db
DB_USER=mktr_user
DB_PASSWORD=mktr_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=942720017977-odeosq0qbmd9hgij0n1fmuc0vuduhj4c.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-json-file

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://mktr.sg,https://www.mktr.sg

# Public URL used to embed in generated QR codes (must point to backend host)
# In production set to https://api.mktr.sg
PUBLIC_BASE_URL=http://localhost:3001

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Twilio Verify
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_VERIFY_SERVICE_SID=
