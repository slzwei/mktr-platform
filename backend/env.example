# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mktr_db
DB_USER=mktr_user
DB_PASSWORD=mktr_password
# For SQLite (local dev fallback), set an absolute DATABASE_URL to avoid stray files
# Example (macOS): DATABASE_URL=/Users/yourname/Downloads/mktr/backend/fresh.db
# DATABASE_URL=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=942720017977-odeosq0qbmd9hgij0n1fmuc0vuduhj4c.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-json-file

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://mktr.sg,https://www.mktr.sg

# Public URL used to embed in generated QR codes (must point to backend host)
# In production set to https://api.mktr.sg
PUBLIC_BASE_URL=http://localhost:3001

# Gateway internal URL for leadgen proxy shim
GATEWAY_INTERNAL_URL=http://gateway:4000

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Phase C Flags (AdTech Manifest & Beacons)
MANIFEST_ENABLED=false
BEACONS_ENABLED=false
MANIFEST_REFRESH_SECONDS=300
MANIFEST_RPS_PER_DEVICE=2
BEACON_IDEMP_WINDOW_MIN=10
BEACON_RPS_PER_DEVICE=5

# System Agent Defaults
SYSTEM_AGENT_EMAIL=system@mktr.local
# Optional: Pin a default active agent id; if invalid, email fallback is used
# DEFAULT_AGENT_ID=

# AWS SNS (SMS Verification)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-1
# Optional: Sender ID (e.g. "MKTR"). Leave blank to use shared/default routes.
AWS_SNS_SENDER_ID=

# Meta WhatsApp Cloud API
WHATSAPP_PROVIDER=meta
META_WA_PHONE_NUMBER_ID=
META_WA_ACCESS_TOKEN=
META_WA_BUSINESS_ACCOUNT_ID=
