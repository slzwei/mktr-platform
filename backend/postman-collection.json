{
  "info": {
    "name": "MKTR Backend API",
    "description": "Complete API collection for MKTR marketing platform",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["health"]
        }
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.data.token);",
                  "    pm.collectionVariables.set('adminId', response.data.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@mktr.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Admin\",\n  \"lastName\": \"User\",\n  \"role\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@mktr.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Campaigns",
      "item": [
        {
          "name": "Create Campaign",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('campaignId', response.data.campaign.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Summer Promotion 2024\",\n  \"description\": \"Drive leads for summer products\",\n  \"type\": \"lead_generation\",\n  \"budget\": 5000,\n  \"targetAudience\": {\n    \"age\": \"25-45\",\n    \"interests\": [\"automotive\", \"technology\"]\n  },\n  \"startDate\": \"2024-01-01\",\n  \"endDate\": \"2024-12-31\",\n  \"landingPageUrl\": \"https://example.com/summer-promo\",\n  \"callToAction\": \"Get Your Quote Today!\",\n  \"tags\": [\"summer\", \"promotion\", \"leads\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/campaigns",
              "host": ["{{baseUrl}}"],
              "path": ["campaigns"]
            }
          }
        },
        {
          "name": "Get All Campaigns",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/campaigns",
              "host": ["{{baseUrl}}"],
              "path": ["campaigns"]
            }
          }
        },
        {
          "name": "Get Campaign by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/campaigns/{{campaignId}}",
              "host": ["{{baseUrl}}"],
              "path": ["campaigns", "{{campaignId}}"]
            }
          }
        },
        {
          "name": "Update Campaign",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"active\",\n  \"budget\": 7500\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/campaigns/{{campaignId}}",
              "host": ["{{baseUrl}}"],
              "path": ["campaigns", "{{campaignId}}"]
            }
          }
        },
        {
          "name": "Get Campaign Analytics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/campaigns/{{campaignId}}/analytics",
              "host": ["{{baseUrl}}"],
              "path": ["campaigns", "{{campaignId}}", "analytics"]
            }
          }
        }
      ]
    },
    {
      "name": "QR Codes",
      "item": [
        {
          "name": "Create QR Code",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('qrTagId', response.data.qrTag.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Campaign QR - Summer Promo\",\n  \"description\": \"QR code for summer promotion campaign\",\n  \"type\": \"campaign\",\n  \"destinationUrl\": \"https://example.com/summer-promo\",\n  \"campaignId\": \"{{campaignId}}\",\n  \"location\": {\n    \"name\": \"Downtown Office\",\n    \"address\": \"123 Main St\",\n    \"city\": \"New York\",\n    \"state\": \"NY\"\n  },\n  \"tags\": [\"campaign\", \"summer\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/qrcodes",
              "host": ["{{baseUrl}}"],
              "path": ["qrcodes"]
            }
          }
        },
        {
          "name": "Get All QR Codes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/qrcodes",
              "host": ["{{baseUrl}}"],
              "path": ["qrcodes"]
            }
          }
        },
        {
          "name": "Get QR Code by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/qrcodes/{{qrTagId}}",
              "host": ["{{baseUrl}}"],
              "path": ["qrcodes", "{{qrTagId}}"]
            }
          }
        },
        {
          "name": "Record QR Scan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"metadata\": {\n    \"location\": \"Trade Show Booth\",\n    \"device\": \"mobile\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/qrcodes/{{qrTagId}}/scan",
              "host": ["{{baseUrl}}"],
              "path": ["qrcodes", "{{qrTagId}}", "scan"]
            }
          }
        }
      ]
    },
    {
      "name": "Prospects",
      "item": [
        {
          "name": "Create Prospect",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('prospectId', response.data.prospect.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Prospect\",\n  \"email\": \"jane@example.com\",\n  \"phone\": \"555-123-4567\",\n  \"company\": \"Example Corp\",\n  \"jobTitle\": \"Marketing Manager\",\n  \"industry\": \"Technology\",\n  \"leadSource\": \"qr_code\",\n  \"interests\": [\"marketing\", \"automation\"],\n  \"location\": {\n    \"city\": \"San Francisco\",\n    \"state\": \"CA\",\n    \"zipCode\": \"94105\"\n  },\n  \"campaignId\": \"{{campaignId}}\",\n  \"qrTagId\": \"{{qrTagId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/prospects",
              "host": ["{{baseUrl}}"],
              "path": ["prospects"]
            }
          }
        },
        {
          "name": "Get All Prospects",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/prospects",
              "host": ["{{baseUrl}}"],
              "path": ["prospects"]
            }
          }
        },
        {
          "name": "Update Prospect",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"leadStatus\": \"qualified\",\n  \"priority\": \"high\",\n  \"notes\": \"Very interested in our services\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/prospects/{{prospectId}}",
              "host": ["{{baseUrl}}"],
              "path": ["prospects", "{{prospectId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Get Dashboard Overview",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dashboard/overview?period=30d",
              "host": ["{{baseUrl}}"],
              "path": ["dashboard", "overview"],
              "query": [
                {
                  "key": "period",
                  "value": "30d"
                }
              ]
            }
          }
        },
        {
          "name": "Get Analytics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dashboard/analytics?type=prospects&period=30d",
              "host": ["{{baseUrl}}"],
              "path": ["dashboard", "analytics"],
              "query": [
                {
                  "key": "type",
                  "value": "prospects"
                },
                {
                  "key": "period",
                  "value": "30d"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
