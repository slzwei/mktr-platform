{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ManifestV1",
  "type": "object",
  "required": ["version", "device_id", "refresh_seconds", "assets", "playlist"],
  "properties": {
    "version": { "type": "integer", "enum": [1] },
    "device_id": { "type": "string" },
    "refresh_seconds": { "type": "integer", "minimum": 60 },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "asset_url"],
        "properties": {
          "id": { "type": "string" },
          "asset_url": { "type": "string", "format": "uri" },
          "ttl_seconds": { "type": "integer", "minimum": 60 }
        }
      }
    },
    "playlist": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["asset_id", "duration_seconds"],
        "properties": {
          "asset_id": { "type": "string" },
          "duration_seconds": { "type": "integer", "minimum": 1 },
          "campaign_id": { "type": "string" }
        }
      }
    }
  }
}


