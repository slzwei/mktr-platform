{
  "name": "mktr-backend",
  "version": "1.0.0",
  "description": "Marketing Platform Backend API",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:legacy-safe": "node scripts/legacy-safe-harness.js",
    "load:smoke": "node load/run-local-load.js",
    "load:spike": "LOAD_PROFILE=spike node load/run-local-load.js",
    "load:stress": "LOAD_PROFILE=stress node load/run-local-load.js",
    "load:soak": "LOAD_PROFILE=soak node load/run-local-load.js",
    "load:rr": "node load/run-rr.js",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "seed:fleet": "node src/database/seed/fleetSeed.js",
    "update-users": "node src/database/updateUsers.js",
    "build": "echo 'Build completed'",
    "docker:build": "docker build -t mktr-backend .",
    "docker:run": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.637.0",
    "@aws-sdk/client-sns": "^3.966.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^9.0.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.0",
    "joi": "^17.11.0",
    "jose": "^5.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.3",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
